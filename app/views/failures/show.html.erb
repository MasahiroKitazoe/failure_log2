<h1 class="failure-title"><%= @failure.title %></h1><br>

<hr><br>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">概要</h3>
  </div>
  <div class="panel-body">
    <%= @failure.overview %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">タイムライン</h3>
  </div>
  <div class="panel-body">
    <%= @failure.timeline %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">根本原因</h3>
  </div>
  <div class="panel-body">
    <%= @failure.cause %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">影響と損害</h3>
  </div>
  <div class="panel-body">
    <%= @failure.damage %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">同じ失敗を犯した時の応急処置策</h3>
  </div>
  <div class="panel-body">
    <%= @failure.action %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">再発防止策</h3>
  </div>
  <div class="panel-body">
    <%= @failure.prevention %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">教訓</h3>
  </div>
  <div class="panel-body">
    <%= @failure.lesson %>
  </div>
</div><br>

<hr><br>

<p style="text-align: center;"><%= link_to "この記録を編集する", edit_failure_path %></p>